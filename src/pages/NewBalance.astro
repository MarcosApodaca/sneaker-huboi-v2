function filtrarProductos() {
        return productos.filter((producto) => {
            const cumpleTipo = !tipoSeleccionado || producto.tipo === tipoSeleccionado;
            return cumpleTipo;
        });
}
    
---

<Layout title="marca">
    <main class=" max-w-[85rem] mx-auto mt-48 sm:mt-60"> 

        <h1 class=" leading-normal text-center sm:text-start text-5xl sm:text-7xl text-[#faf8f5] mb-28 sm:mb-40 ">New Balance</h1>
        
        <select @change={(e: Event) => (tipoSeleccionado = (e.target as HTMLSelectElement).value)}>
            <option value="">Todos los tipos</option>
            <option value="Zapatillas">Zapatillas</option>
            <option value="Camiseta">Camiseta</option>
        </select>

        <ul class="flex flex-col sm:flex-row sm:flex-wrap items-center">
            {filtrarProductos().map((producto) => (
                <Card
                    href={producto.href}
                    img={producto.img}
                    title={producto.title}
                    tipo={producto.tipo}
                    tallas={producto.tallas}
                    precio={producto.precio}
                    flipImage={true} // Opcional: Puedes ajustar esta prop según tus necesidades
                />

            ))}
