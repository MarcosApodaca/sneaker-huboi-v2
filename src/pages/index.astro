import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';

---

<Layout title="Welcome to Astro.">
	
	<hero class=" grid grid-cols-4 max-h-screen my-auto">
		<h1 class="font-extrabold text-[9rem] text-[#faf8f5] ml-28 self-end ">SNEA <br/>
			KER
		</h1>
		<img class="hero-zapatilla bg-[url(/Component.png)] bg-no-repeat bg-right col-span-2 justify-self-center  w-[43rem]" src="/zapatilla.png" alt="">
		<img class="mano-top justify-self-center mr-96" src="/mano-top.png">
		
		<img class="mano col-span-2  row-start-2 justify-self-center self-end" src="/mano1.png">

		
		<div class=" relative col-span-4 justify-self-center self-center row-start-2 text-7xl font-black ">
		<p class="text-[#B8B8B8] tracking-[10px] ">SNEAKER</p>
		<p class=" w-96 absolute text-white text-xs">No te conformes con lo ordinario elige lo extraordinario con las zapatillas Nike 
		fashion que marcan tendencia en todo el mundo Hazte con un par hoy mismo y eleva tu estilo a nuevas alturas</p>
