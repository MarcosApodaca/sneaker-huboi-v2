---
import Card from "./Card.astro";

export interface Productos {
	img: string;
	marca: string;
	title?: string;
	tipo:string;
	tallas:string
	precio: string;
	flipImage?: boolean;
	rotateImage?: boolean;
}

interface Props {
    producto:Productos[];
    title:string;
}

const { producto, title } = Astro.props;

---

<main class=" max-w-[85rem] mx-auto mt-48 sm:mt-60"> 
    <h1 class=" leading-normal text-center xl:text-start text-5xl sm:text-7xl text-[#faf8f5] mb-28 sm:mb-35 ">{title}</h1>
    <ul class="grid grid-cols-2 sm:flex sm:flex-row sm:flex-wrap items-center sm:justify-center">
        {producto.map((producto:any) => (
            <Card
                href={producto.href}
                img={producto.img}
                title={producto.title}
                marca={producto.marca}
                tipo={producto.tipo}
                tallas={producto.tallas}
                precio={producto.precio}
                flipImage={producto.flipImage}
            />
        ))}
    </ul>
</main>
