.nav-desplegado-mobile{
    position: fixed;
    background-color: #faf8f5;
    height:94%;
    width: 80%;
    top: 0;
    padding: 2rem;
    border-radius: 20px 0 0 20px;
    animation: despliegueNavMobile 0.5s both;

}

@keyframes despliegueNavMobile {
    from {
        transform: translateX(300px);
        opacity: 0;
    }
    to {
        transform: translateX(-260px); 
        opacity: 1;
    }
}

@keyframes ocultarNavMobile  {
    from {
        transform: translateX(-260px); 
        opacity: 1;
    }
    to {
        transform: translateX(300px);
        opacity: 0;
    }
}

.nav-desplegado-menu.abierto {
    /* Aplicar animación para abrir el menú */
    animation: despliegueNavMobile 0.5s both;;
}

.nav-desplegado-menu.cerrado {
    /* Aplicar animación para cerrar el menú */
    animation: ocultarNavMobile 0.5s both;;
}

.nav-desplegado{
    color: #000;
    margin: 0 auto;
    height:22rem;
    width:100vw;
    background-color: #faf8f5;   
    animation: despliegue 0.5s ease-in-out forwards;
    
}

@keyframes despliegue {
    0% {
        height: 0;
        opacity: 0;
    }
    100% {
        height: 22rem;
        opacity: 1;
    }
}


