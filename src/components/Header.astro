@media ( max-width: 1024px) { 
    .scroll-container {
    width: auto;
    overflow-y: auto;
    overflow-x: hidden;
}
}


header{
    animation: header-bg linear forwards;
	animation-timeline: scroll();
	animation-range: 0vh 50vh;
}

@keyframes header-bg {
	from {
		background-color: transparent;
	}
	to {
		background-color: #111111;
	}
}


