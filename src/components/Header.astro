.nav-abierto{
    display: block;
}


.nav-desplegado-mobile{
    display: block;
    position: fixed;
    background-color: #faf8f5;
    height:100%;
    width: 325px;
    top: 0;
    padding: 2rem;
    border-radius: 20px 0 0 20px;
    animation: despliegueNavMobile 0.5s both;

}

@keyframes despliegueNavMobile {
    from {
        transform: translateX(0%);
        opacity: 0;
    }
    to {
        transform: translateX(-80%); 
        opacity: 1;
    }
}

